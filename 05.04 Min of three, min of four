// Functions and Methods
//
// #6  Min of Three, Min of four
//
// 
// 
// 

public class Mins {
   
    public static int min(int n1, int n2){
        if (n1 > n2) return n2;
        else return n1;
    }
    
    public static int min3(int n1, int n2, int n3){
        return min(min(n1,n2),n3);
    }
    
    public static int min4(int n1, int n2, int n3, int n4){
        return min(min3(n1,n2,n3),n4);
    }    
        
    public static void main(String []args){

        System.out.println(min3(12, 4, 7));
        System.out.println(min4(12, 14, 8, 10));
     }
}
